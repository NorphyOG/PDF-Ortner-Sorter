<Window x:Class="PDFOrtnerSorter.Dialogs.MoveConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ziel bestätigen"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#0f172a"
        Foreground="White"
        FontFamily="Segoe UI"
        WindowStyle="ToolWindow"
        MinWidth="560">
    <Window.Resources>
        <Style x:Key="DialogInputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#0f172a" />
            <Setter Property="BorderBrush" Value="#233044" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="10" />
        </Style>
    </Window.Resources>
    <Border Padding="28" Background="#131d31" CornerRadius="14">
        <StackPanel>
            <TextBlock Text="Bitte bestätige den Ziel-Unterordner." FontSize="22" FontWeight="SemiBold" />
            <TextBlock Text="Du kannst den Namen hier bei Bedarf ändern, bevor die Dateien verschoben werden." Margin="0,6,0,24" Foreground="#cbd5f5" TextWrapping="Wrap" FontSize="14" />
            <TextBox x:Name="FolderNameTextBox"
                     Text="{Binding FolderName, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,24"
                     Padding="14"
                     FontSize="16"
                     Style="{StaticResource DialogInputTextBoxStyle}" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Abbrechen"
                    Width="140"
                    Padding="14,8"
                    FontSize="14"
                    Click="OnCancelClicked"
                    Margin="0,0,14,0" />
                <Button Content="Verschieben"
                    Width="160"
                    Padding="14,8"
                    FontSize="14"
                    IsDefault="True"
                    Click="OnConfirmClicked" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
