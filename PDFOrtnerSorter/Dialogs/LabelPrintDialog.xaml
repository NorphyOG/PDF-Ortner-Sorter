<Window x:Class="PDFOrtnerSorter.Dialogs.LabelPrintDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:infra="clr-namespace:PDFOrtnerSorter.Infrastructure"
        Title="Etiketten drucken"
        Width="900"
        Height="700"
        MinWidth="800"
        MinHeight="600"
        WindowStartupLocation="CenterOwner"
        Background="#0f172a"
        Foreground="White"
        FontFamily="Segoe UI"
        WindowStyle="ToolWindow">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
        <infra:InverseBoolConverter x:Key="InverseBoolConverter" />
        
        <Style x:Key="DialogInputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#0f172a" />
            <Setter Property="BorderBrush" Value="#233044" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="10" />
        </Style>
        <Style x:Key="DialogComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#3b82f6" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="White" />
                        <Setter Property="Foreground" Value="Black" />
                        <Setter Property="Padding" Value="10,8" />
                        <Setter Property="FontWeight" Value="SemiBold" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#e0f2fe" />
                                <Setter Property="Foreground" Value="#0c4a6e" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#bae6fd" />
                                <Setter Property="Foreground" Value="#0c4a6e" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#60a5fa" />
                    <Setter Property="Background" Value="#f0f9ff" />
                </Trigger>
                <Trigger Property="IsDropDownOpen" Value="True">
                    <Setter Property="BorderBrush" Value="#60a5fa" />
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3b82f6" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2563eb" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1d4ed8" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#6b7280" />
                                <Setter Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#374151" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4b5563" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1f2937" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Padding="24" Background="#131d31" CornerRadius="18">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Etiketten drucken" FontSize="26" FontWeight="SemiBold" />
                <TextBlock Text="Erstellen Sie Etiketten fÃ¼r physische Dokumente zur besseren Organisation." 
                           Margin="0,6,0,0" Foreground="#cbd5f5" TextWrapping="Wrap" FontSize="14" />
            </StackPanel>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>

                <!-- Left: Settings -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="Etiketteneinstellungen" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12" />

                    <Grid Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Drucker" FontWeight="SemiBold" FontSize="14" />
                        <Button Grid.Column="1" Content="ðŸ”„ Aktualisieren" 
                                Command="{Binding RefreshPrintersCommand}"
                                Background="#1e293b" 
                                Foreground="White"
                                BorderBrush="#3b82f6"
                                BorderThickness="1"
                                Padding="8,4"
                                FontSize="11"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="4"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2d3748"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                    <ComboBox ItemsSource="{Binding AvailablePrinters}"
                              SelectedItem="{Binding SelectedPrinter}"
                              Style="{StaticResource DialogComboBoxStyle}"
                              Margin="0,0,0,16" />

                    <TextBlock Text="Etikettenformat" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,6" />
                    <ComboBox ItemsSource="{Binding AvailableFormats}"
                              SelectedIndex="{Binding SelectedFormatIndex}"
                              Style="{StaticResource DialogComboBoxStyle}"
                              Margin="0,0,0,16" />

                    <TextBlock Text="Ordnername" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,6" />
                    <TextBox Text="{Binding FolderName, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource DialogInputTextBoxStyle}"
                             Margin="0,0,0,16" />

                    <TextBlock Text="Zielordner" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,6" />
                    <TextBox Text="{Binding DestinationPath, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource DialogInputTextBoxStyle}"
                             Margin="0,0,0,16" />

                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Anzahl Dokumente" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,6" />
                            <TextBox Text="{Binding DocumentCount, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource DialogInputTextBoxStyle}"
                                     PreviewTextInput="NumberTextBox_PreviewTextInput" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="Kopien" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,6" />
                            <TextBox Text="{Binding Copies, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource DialogInputTextBoxStyle}"
                                     PreviewTextInput="NumberTextBox_PreviewTextInput" />
                        </StackPanel>
                    </Grid>

                    <CheckBox Content="Barcode/QR-Code einbeziehen"
                              FontSize="14"
                              IsChecked="{Binding IncludeBarcode}"
                              Margin="0,0,0,0" />
                </StackPanel>

                <!-- Right: Preview -->
                <Border Grid.Column="1" 
                        Background="#0f172a" 
                        CornerRadius="12" 
                        BorderBrush="#233044" 
                        BorderThickness="1"
                        Padding="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Vorschau" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8" />
                        
                        <Border Grid.Row="1" Background="White" CornerRadius="8">
                            <Grid>
                                <Image Source="{Binding PreviewImage}" 
                                       Stretch="Uniform"
                                       Margin="8" />
                                
                                <TextBlock Text="Vorschau wird generiert..."
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="#64748b"
                                           FontStyle="Italic"
                                           Visibility="{Binding IsGeneratingPreview, Converter={StaticResource BoolToVisibility}}" />
                                
                                <TextBlock Text="Klicken Sie auf 'Vorschau aktualisieren'"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="#64748b"
                                           FontStyle="Italic">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding PreviewImage}" Value="{x:Null}" />
                                                        <Condition Binding="{Binding IsGeneratingPreview}" Value="False" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Footer Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="ðŸ“· Als PNG exportieren"
                        Command="{Binding ExportAsPdfCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Padding="14,10"
                        Margin="0,0,8,0" />
                <Button Content="âœ• Abbrechen"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Padding="14,10"
                        Margin="0,0,8,0"
                        Click="OnCancelClicked" />
                <Button Content="ðŸ–¨ï¸ Drucken"
                        Style="{StaticResource ActionButtonStyle}"
                        Padding="14,10"
                        IsDefault="True"
                        Command="{Binding PrintCommand}"
                        Click="OnPrintClicked" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
